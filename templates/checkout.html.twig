                            <div class="row">
                                <span>{{ payment_method.name }}</span>
                            </div>
                            {% if payment_method.logo %}
                                <div class="row">
                                    <img src="{{ payment_method.logo }}" style="height: 50px; width: auto;" />
                                </div>
                            {% endif %}
